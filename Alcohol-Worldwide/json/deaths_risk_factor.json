{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title":"Total annual number of deaths by risk factor, World",
    "data": {"url": "https://raw.githubusercontent.com/lydleejq/FIT3179/main/Alcohol-Worldwide/data/number-of-deaths-by-risk-factor-world.csv"},
    "params": [
      {
        "name": "Year_selection",
        "value": 1990,
        "bind": {
          "input": "range",
          "min": 1990,
          "max": 2019,
          "step": 1,
          "name": "Year: "
        }
      }
      
    ],
    "transform": [
      {
        "filter": "datum.Year == Year_selection"
      }
    ],
    "encoding": {
      "y": {
        "field": "Risk",
        "type": "nominal",
        "axis": {"minExtent": 100, "title": null},
        "sort": "-x"
      },
      "x": {
        "aggregate": "sum",
        "field": "Number of cases"
      }
    },
    "layer": [{
      "mark": {"type": "bar", "color": "#808080"},
      "encoding": {
        "x": {
          "aggregate": "sum",
          "field": "Number of cases",
          "scale": {"type": "linear"},
          "title": "Number of deaths"
        },
          "color": {
            "condition": [
              {
                "value": "tomato",
                "test": {"field": "Risk", "oneOf": ["Alcohol use"]}
              }
            ],
            "value": "#ddd"
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal", "title": "Location"},
            {"field": "Risk", "type": "nominal", "title": "Risk factor"},
            {
              "field": "Number of cases",
              "type": "quantitative",
              "title": "Number of cases",
              "format": ","
            },
            {"field": "Year", "type": "quantitative", "title": "Year"}
          ]
      }
    }, {
      "mark": {"type": "text", "align": "left", "x": 5},
      "encoding": {
        "text": {
          "field": "Number of cases", 
          "format":".4s"
          },
          "color": {
            "condition": [
              {
                "value": "tomato",
                "test": {"field": "Risk", "oneOf": ["Alcohol use"]}
              }
            ],
            "value": "white"
          },
        "detail": {"aggregate": "count"}
      }
    }],
    "config":{
      "title":{
        "color":"whitesmoke"
      },
      "background":"#181b1f",
      "axis": {
        "labelColor":"whitesmoke",
        "titleColor":"whitesmoke",
        "gridColor":"#5c5c5c"
      },
      "legend":{
        "orient":"right",
        "labelColor":"whitesmoke",
        "titleColor":"whitesmoke"
      }
    } 
  }