{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Litres of Beer, Spirits and Wine Consumed Annually around the World",
    "fontSize": 16
  },
  "width": 1280,
  "height": 720,
  "data": {
    "url": "https://raw.githubusercontent.com/lydleejq/FIT3179/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#c6ecff"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lydleejq/FIT3179/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/lydleejq/FIT3179/main/drinks.csv"
            },
            "key": "country",
            "fields": ["total_litres_of_pure_alcohol"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "title": "Total litres / year",
          "field": "total_litres_of_pure_alcohol",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "range": ["#fef0d9", "#fdcc8a", "#fc8d59", "#d7301f"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "total_litres_of_pure_alcohol",
            "type": "quantitative",
            "title": "Total litres"
          }
        ]
      }
    }
  ],
  "config": {}
}
